@{
    Layout = null;
}
<div class="row-fluid">
    <h3 class="page-title">
        Quản lý tài khoản <small>Quản lý, thêm mới, thay đổi các thông tin liên quan đến tài khoản</small>
    </h3>
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="/">Trang chủ</a>
            <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Danh sách tài khoản</a> </li>
    </ul>
</div>
<div class="row-fluid" id="divbodyUser">
    <div class="row-fluid" id="wapListUser">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-reorder"></i>Danh sách tài khoản
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove" id="lnkRemoveListUser"></a>
                </div>
            </div>
            <div class="portlet-body forget-form" id="listUser">
                    <div class="clearfix">
                        <div class="btn-group pull-right">
                            <button type="button" id="btnAddNew" class="btn blue">
                                <i class="icon-plus"></i>
                                Thêm mới
                            </button>
                        </div>
                    </div>
                <div class="row-fluid" id="divListUser">
                    @Html.Action("GetListUser", "User")
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid hide" id="divAddNewUser">
        @Html.Action("Create", "User")
    </div>
</div>
<script type="text/javascript" language="javascript">
    App.initPortletTools();
    App.initUniform();
    user_list.init();
</script>