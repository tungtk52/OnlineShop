@{
    Layout = null;
}
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-plus"></i>Thêm người dùng
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"></a>
            <a href="javascript:;" class="remove" control-relation="lnkRemoveListUser"></a>
        </div>
    </div>
    <div class="portlet-body form">
        <form action="#" id="frmCreateUser" class="form-horizontal">
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            Tài khoản<span class="required">*</span>
                        </label>
                        <div class="controls">
                            <input id="txtUserName" type="text" class="span12 m-wrap " placeholder="Tài khoản" />
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            Mật khẩu<span class="required">*</span>
                        </label>
                        <div class="controls">
                            <input id="txtPassword" type="password" class="span12 m-wrap " placeholder="Mật khẩu" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            Tên hiển thị
                        </label>
                        <div class="controls">
                            <input id="txtFullName" type="text" class="span12 m-wrap " placeholder="Tên hiển thị" />
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            Email<span class="required">*</span>
                        </label>
                        <div class="controls">
                            <input id="txtEmail" type="text" class="span12 m-wrap" placeholder="Email" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            SĐT
                        </label>
                        <div class="controls">
                            <input id="txtPhone" type="text" class="span12 m-wrap " placeholder="Số điện thoại" />
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label">
                            Địa chỉ
                        </label>
                        <div class="controls">
                            <input id="txtAddress" type="text" class="span12 m-wrap" placeholder="Địa chỉ" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                @Html.Hidden("hidId",0)
                <button type="button" class="btn blue" id="btnSaveUser">
                    <i class="icon-save" />
                    Lưu
                </button>
                <button type="button" id="btnResetUserInput" class="btn blue">
                    <i class="icon-refresh" />
                    Làm lại
                </button>
                <button type="button" name="btnBackToListUser" class="btn blue">
                    <i class="icon-remove" />
                    Đóng
                </button>
            </div>
        </form>
    </div>
</div>
